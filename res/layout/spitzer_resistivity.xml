<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp" >

        <!-- Every Linear Layout here is a Row -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/transverse_spitzer" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/n_perp" />

            <EditText
                android:id="@+id/answer_perp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textlines_blue"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:text="0" >
            </EditText>

            <ImageView
		        android:id="@+id/imageView1"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:padding="5dp"
		        android:src="@drawable/ohmcm"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/parallel_spitzer" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/n_parallel" />

            <EditText
                android:id="@+id/answer_parallel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textlines_blue"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:text="0" />

            <ImageView
		        android:id="@+id/imageView2"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:padding="5dp"
		        android:src="@drawable/ohmcm"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Z = "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/zInput"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textlines_black"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:padding="5dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="e"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/zExponent"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textlines_black"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:padding="5dp"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ln\u039B = "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/lambdaInput"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textlines_black"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:padding="5dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="e"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/lambdaExponent"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textlines_black"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:padding="5dp"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="T = "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/tInput"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textlines_black"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:padding="5dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="e"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/tExponent"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textlines_black"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:padding="5dp"
                android:text="0" />
            
            <TextView
		        android:layout_width="30dp"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text=" eV"
		        android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>