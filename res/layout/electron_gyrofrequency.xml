<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="icon"
        android:src="@drawable/electron_gyro_f" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/answer_f"
        android:contentDescription="icon"
        android:src="@drawable/electron_gyro_w" />

    <EditText
        android:id="@+id/answer_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer_f"
        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/w_text"
        android:background="@drawable/textlines_blue"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:text="0" />

    <EditText
        android:id="@+id/answer_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/f_text"
        android:background="@drawable/textlines_blue"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:text="0" >
    </EditText>

    <TextView
        android:id="@+id/units1_text"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/imageView2"
        android:layout_toRightOf="@+id/answer_f"
        android:gravity="center"
        android:text="Hz"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/units2_text"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/answer_w"
        android:layout_toRightOf="@+id/answer_w"
        android:gravity="center"
        android:text="rad/sec"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/w_text"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/f_text"
        android:layout_below="@+id/imageView2"
        android:clickable="false"
        android:gravity="center"
        android:text="\u03C9 = "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/f_text"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_above="@+id/imageView2"
        android:gravity="center"
        android:text="\u0192 = "
        android:textSize="20sp" />
    
    <EditText
        android:id="@+id/bInput"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer_w"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/b_text"
        android:background="@drawable/textlines_black"
        android:gravity="center"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="5dp" >
        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/e_text"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/answer_w"
        android:layout_toRightOf="@+id/bInput"
        android:clickable="false"
        android:gravity="center"
        android:text="e"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/bExponent"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/e_text"
        android:layout_below="@+id/answer_w"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/textlines_black"
        android:ems="10"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:padding="5dp"
        android:text="0" />

    <TextView
        android:id="@+id/g_text"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/answer_w"
        android:layout_toRightOf="@+id/bExponent"
        android:clickable="false"
        android:gravity="center"
        android:text="G"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/b_text"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/bInput"
        android:layout_alignLeft="@+id/f_text"
        android:clickable="false"
        android:gravity="center"
        android:text="B = "
        android:textSize="20sp" />
    
</RelativeLayout>	
    
</ScrollView>